<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Slacky</title>
    <link href="/public/styles/style.css" rel="stylesheet">
</head>

<body>
    <h1>Slacky</h1>
    <form id="form" method="post" action="/create">
        <input id="input" type="text" name="name" placeholder="Channel name here" /><br />
        <input id="input" type="text" name="description" placeholder="Channel description here" /><br />
        <span>Private</span><input type="checkbox" name="private" /><br />
        <input type="submit" value="Create Channel" />
    </form>
    <h2>My channels</h2>
    <table>
        <!-- <tr>
            <th>Name</th>
            <th>Delete</th>
        </tr> -->
        <% channels.forEach( channel=> { %>
            <tr>
                <td><a href="/channel/<%= channel._id %>">
                        <%= channel.name %>
                    </a></td>
                <td><a href="/delete/<%= channel._id %>">X</a></td>
            </tr>
            <% }) %>
    </table>
</body>

</html>